<div class="form-container">
<h1> Log In </h1>
<% if flash[:errors] %>
    <%= flash[:errors]%><br>
    <% end %>
  <%= form_for :session, url: login_path do |f| %>
    <div class="form-input">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="form-input">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <br>
    <br>
    <%= f.submit "Login" %>
  <% end %>
</div>